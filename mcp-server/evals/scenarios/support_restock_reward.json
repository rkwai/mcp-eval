{
  "id": "support_restock_reward",
  "description": "Agent restocks a reward and confirms the catalog reflects the change.",
  "conversation": [
    {
      "role": "user",
      "content": "We just received five more priority boarding vouchers from the partner team. Update the catalog inventory and confirm the new count."
    }
  ],
  "steps": [
    {
      "label": "Agent: Restock priority boarding vouchers",
      "tool": "rewards.restock",
      "arguments": {
        "searchTerm": "priority",
        "quantity": 5,
        "targetInventory": 125
      },
      "expect": {
        "status": "success",
        "assert": [
          {
            "path": "reward.id",
            "equals": "reward-flight-upgrade"
          },
          {
            "path": "reward.inventory",
            "equals": 125
          },
          {
            "path": "reward.name",
            "contains": "Priority"
          }
        ]
      }
    }
  ]
}
