{
  "id": "support_redeem_reward",
  "description": "Agent redeems a reward for a customer and confirms the transaction.",
  "conversation": [
    {
      "role": "user",
      "content": "Jasmine Ortiz wants us to redeem an espresso upgrade for her while she waits. Take care of it and let me know the result."
    }
  ],
  "steps": [
    {
      "label": "Agent: Redeem reward for Jasmine",
      "tool": "rewards.redeem",
      "arguments": {
        "email": "jasmine.ortiz@example.com",
        "rewardId": "reward-espresso",
        "channel": "support",
        "note": "gesture of goodwill"
      },
      "expect": {
        "status": "success",
        "assert": [
          {
            "path": "reward.id",
            "equals": "reward-espresso"
          },
          {
            "path": "activity.points",
            "equals": -750
          }
        ]
      }
    }
  ]
}