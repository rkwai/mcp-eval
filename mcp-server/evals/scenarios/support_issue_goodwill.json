{
  "id": "support_issue_goodwill",
  "description": "Agent issues goodwill points to a customer and verifies the updated balance.",
  "conversation": [
    {
      "role": "user",
      "content": "Marcus Lee is following up on a delayed shipment. Please credit him 500 goodwill points and confirm it posted to his account."
    }
  ],
  "steps": [
    {
      "label": "Agent: Issue goodwill points",
      "tool": "loyalty.issueGoodwill",
      "arguments": {
        "email": "marcus.lee@example.com",
        "points": 500,
        "reason": "Delayed shipment credit"
      },
      "expect": {
        "status": "success",
        "assert": [
          {
            "path": "customer.email",
            "equals": "marcus.lee@example.com"
          },
          {
            "path": "activity.points",
            "equals": 500
          },
          {
            "path": "summary.totals",
            "exists": true
          }
        ]
      }
    }
  ]
}