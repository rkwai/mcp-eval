{
  "id": "support_offer_claim",
  "description": "Agent claims an existing offer for a customer and confirms reward details.",
  "conversation": [
    {
      "role": "user",
      "content": "Alicia Patel wants to use her espresso upgrade now. Claim it on her behalf and confirm the reward details for me."
    }
  ],
  "steps": [
    {
      "label": "Agent: Claim offer for Alicia",
      "tool": "offers.claim",
      "arguments": {
        "email": "alicia.patel@example.com",
        "customerOfferId": "coffer-alicia-upgrade"
      },
      "expect": {
        "status": "success",
        "assert": [
          {
            "path": "claim.customerOffer.status",
            "equals": "claimed"
          },
          {
            "path": "claim.reward.id",
            "exists": true
          }
        ]
      }
    }
  ]
}