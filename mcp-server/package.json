{
  "name": "mcp-server",
  "version": "0.1.0",
  "description": "MCP server wrapping the API service with evaluation logging",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node -e \"console.log('MCP server exposes tools only. Use npm run eval to exercise scenarios.')\"",
    "serve": "ts-node src/runtime/stdio-entry.ts",
    "build": "tsc -p .",
    "eval": "ts-node scripts/run-evals.ts",
    "eval:llm": "ts-node scripts/run-evals.ts --llm",
    "eval:report": "node scripts/eval-report.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "yargs": "^17.7.2"
  }
}
