{
  "name": "mcp-server",
  "version": "0.1.0",
  "description": "MCP server wrapping the API service with evaluation logging",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node -e \"console.log('MCP server exposes tools only. Use npm run eval to exercise scenarios.')\"",
    "serve": "ts-node src/runtime/http-entry.ts",
    "serve:stdio": "ts-node src/runtime/stdio-entry.ts",
    "build": "tsc -p .",
    "eval": "npm run clear && ts-node scripts/run-evals.ts",
    "eval:llm": "npm run clear && ts-node scripts/run-evals.ts --llm",
    "eval:e2e": "npm run clear && ts-node scripts/run-evals.ts --live",
    "eval:report": "node scripts/eval-report.js",
    "clear": "rm -rf evals/logs"
  },
  "dependencies": {
    "@ax-llm/ax": "^14.0.31",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3",
    "yargs": "^17.7.2"
  }
}
